{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "typescript-remix-routes-plugin",
        "tag": "route",
      }
    ]
  },
  "include": [
    "**/src/**/*.ts",
    "**/src/**/*.tsx",
    "**/src/**/*.jsx",
    "**/testUtils/**/*.ts",
    "**/testUtils/**/*.tsx",
    "*.ts",
    "**/cypress/*.ts",
    "**/scripts/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".yarn"
  ]
}
