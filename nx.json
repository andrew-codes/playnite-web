{
  "targetDefaults": {
    "build": {
      "dependsOn": ["clean", "^build", "build/restore"],
      "cache": true
    },
    "package": {
      "dependsOn": ["clean", "build", "^package"],
      "cache": false
    },
    "publish": {
      "dependsOn": ["package"],
      "cache": false
    },
    "test/unit": {
      "dependsOn": ["test/unit/restore", "test/unit/build"],
      "cache": true
    },
    "test/unit/ci": {
      "dependsOn": ["test/unit/restore", "test/unit/build"],
      "cache": true
    },
    "test/unit/restore": {
      "dependsOn": ["build/restore"],
      "cache": false
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
