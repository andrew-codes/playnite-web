{
  "namedInputs": {
    "src": ["{projectRoot}/src/**"],
    "generated": ["{projectRoot}/.generated"]
  },
  "targetDefaults": {
    "clean": {
      "dependsOn": [],
      "cache": true
    },
    "build": {
      "inputs": ["src", "generated"],
      "dependsOn": ["prepare", "^build", "build/restore"],
      "cache": true
    },
    "build/restore": {
      "dependsOn": [],
      "cache": true
    },
    "prepare": {
      "outputs": ["{projectRoot}/.generated"],
      "dependsOn": ["^prepare"],
      "cache": true
    },
    "start": {
      "dependsOn": ["prepare", "^start/prepare", "start/prepare"],
      "cache": false
    },
    "package": {
      "dependsOn": ["package/files", "package/container"],
      "cache": false
    },
    "package/files": {
      "dependsOn": ["clean", "build", "^package/files"],
      "cache": true
    },
    "package/container": {
      "dependsOn": ["package/files"],
      "cache": false
    },
    "publish": {
      "dependsOn": ["package"],
      "cache": false
    },
    "test/unit": {
      "dependsOn": ["prepare", "test/unit/restore", "test/unit/build"],
      "cache": false
    },
    "test/unit/ci": {
      "dependsOn": ["clean", "prepare", "test/unit/restore", "test/unit/build"],
      "cache": false
    },
    "test/unit/restore": {
      "dependsOn": ["build/restore"],
      "cache": true
    },
    "test/components": {
      "dependsOn": ["prepare"],
      "cache": false
    },
    "test/components/ci": {
      "dependsOn": ["prepare", "clean"],
      "cache": false
    },
    "test/components/visual": {
      "dependsOn": ["prepare"],
      "cache": false
    },
    "test/components/visual/update": {
      "dependsOn": ["prepare"],
      "cache": false
    },
    "test/components/visual/ci": {
      "dependsOn": ["prepare", "clean"],
      "cache": false
    },
    "test/e2e": {
      "dependsOn": ["prepare", "package/files"],
      "cache": false
    },
    "test/e2e/ci/instrument": {
      "dependsOn": ["prepare", "package/files"],
      "cache": true
    },
    "test/e2e/ci": {
      "dependsOn": [
        "prepare",
        "test/e2e/ci/prepare",
        "clean",
        "package/files",
        "test/e2e/ci/instrument"
      ],
      "cache": false
    },
    "test/e2e/ci/local": {
      "dependsOn": [
        "prepare",
        "test/e2e/ci/local/prepare",
        "package/files",
        "test/e2e/ci/instrument",
        "clean"
      ],
      "cache": true
    },
    "test/e2e/update": {
      "dependsOn": ["prepare", "test/e2e/prepare"],
      "cache": false
    }
  },
  "affected": {
    "defaultBase": "main"
  }
}
