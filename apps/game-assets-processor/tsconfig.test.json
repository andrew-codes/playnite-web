{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts", "testUtils/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
