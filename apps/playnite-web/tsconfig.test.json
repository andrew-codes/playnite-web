{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "testUtils/**/*.ts",
    "*.ts",
    "../../graphql.config.ts",
    ".generated/resolvers.generated.ts",
    ".generated/typeDefs.generated.ts",
    ".generated/types.generated.ts",
    "cypress/e2e/errors.cy.ts"
  ],
  "exclude": ["node_modules"]
}
