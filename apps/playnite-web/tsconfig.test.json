{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/jest",
    "types": ["jest", "node"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "jest.config.js",
    "src/**/__tests__/**/*.test.ts",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.json"
    }
  ]
}
