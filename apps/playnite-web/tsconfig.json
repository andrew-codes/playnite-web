{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "cypress",
      "node",
      "react",
      "vite/client",
      "@vite-pwa/remix/remix-sw"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
