{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "@types/cypress",
      "@types/node",
      "@types/react",
      "vite/client",
      "@vite-pwa/remix/remix-sw"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "build/server/index.mjs",
    "server.ts",
    "server.mjs"
  ],
}