{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "cypress",
      "node",
      "react",
      "vite/client",
      "@vite-pwa/remix/remix-sw"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "scripts/**/*.ts",
    "testUtils/**/*.ts",
    "testUtils/**/*.tsx",
    "cypress/support/*.ts",
    "cypress/plugins/*.ts",
    "*.ts",
    "../../graphql.config.ts",
    ".generated/**/*.*",
    ".generated/resolvers.generated.ts",
    ".generated/typeDefs.generated.ts",
    ".generated/types.generated.ts",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.server.json"
    },
    {
      "path": "./tsconfig.test.json"
    }
  ]
}
