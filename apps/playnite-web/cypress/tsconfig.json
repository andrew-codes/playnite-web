{
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "../node_modules",
    "types": [
      "cypress",
      "@types/node",
      "@types/react"
    ],
    "outDir": "dist",
    "jsx": "react",
    "module": "ESNext"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.jsx",
    "src/**/*.tsx",
    "*.js",
    "*.ts",
    "cypress.config.js",
    "cypress/**/*.js",
    "cypress/**/*.ts"
  ],
  "extends": "../tsconfig.json"
}