{
  "name": "playnite-web-app",
  "sourceRoot": "apps/playnite-web-app/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn rimraf .dist .packaged .test-runs build public/build",
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "yarn remix-routes -w",
          "bash -c 'set -o allexport && source local.env && set +o allexport && yarn remix dev -c \"node server.mjs\"'"
        ]
      }
    },
    "test/components": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn cypress open",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["yarn remix-routes && yarn remix build"],
        "cwd": "{projectRoot}"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "bash -c 'mkdir -p .packaged/build && cp build/ .packaged -r && cp public/ .packaged -r && cp server.mjs .packaged && cp package.json .packaged'"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build --tag $REGISTRY/$OWNER/$REPO_NAME-app:$TAG --file Dockerfile ../.. && docker push $REGISTRY/$OWNER/$REPO_NAME-app:$TAG"
        ],
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["linux"],
  "implicitDependencies": []
}
