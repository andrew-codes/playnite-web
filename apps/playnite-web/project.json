{
  "name": "playnite-web-app",
  "sourceRoot": "apps/playnite-web-app/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn rimraf vite.config.ts.* server.production.js .dist _packaged .test-runs build",
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn cross-env DEBUG='playnite-web/*' yarn node ./server.mjs"
      }
    },
    "test/components": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn cypress open --component",
        "cwd": "{projectRoot}"
      }
    },
    "test/components/ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn cross-env CI=true yarn cypress run --component",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn remix vite:build && yarn esbuild server.mjs --bundle --minify --outfile=server.production.js --platform=node --target=node20 --define:process.env.NODE_ENV=\\\"production\\\"",
        "cwd": "{projectRoot}"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn node --experimental-json-modules scripts/package.js"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn node --experimental-json-modules scripts/publish.js"
        ],
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["linux"],
  "implicitDependencies": []
}
