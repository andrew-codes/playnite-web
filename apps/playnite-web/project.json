{
  "name": "playnite-web-app",
  "sourceRoot": "apps/playnite-web-app/src",
  "projectType": "application",
  "targets": {
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn rimraf server.production.js .dist _packaged .test-runs build public/build",
        "cwd": "{projectRoot}"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "commands": [
          "yarn remix-routes -w",
          "yarn cross-env DEBUG='playnite-web-app/*' yarn remix dev -c \"node server.mjs\"",
          "yarn remix-pwa dev"
        ]
      }
    },
    "test/components": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn cypress open --component",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn remix-routes && yarn remix build && yarn remix-pwa build && yarn esbuild server.mjs --bundle --minify --outfile=server.production.js --platform=node --target=node20"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn node --experimental-json-modules scripts/package.js"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "yarn node --experimental-json-modules scripts/publish.js"
        ],
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["linux"],
  "implicitDependencies": []
}
