{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "*.ts", ".generated/**/*.*"],
  "exclude": ["node_modules"],
  "references": []
}
